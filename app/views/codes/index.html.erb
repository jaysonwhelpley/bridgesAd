<p id="notice"><%= notice %></p>

<h1>Codes</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <% timeago = (Time.now.to_date - code.created_at.to_date).to_i %>
        <% if timeago > 0 %>
          <td><%= timeago %> Days old. </td>
        <% elsif timeago == 0 %>
          <td>Uploaded Today.</td>
        <% else %>
          <td>Somehow uploaded in the future.</td>
        <% end %>
        <td><%= link_to 'Show', code %></td>
        <td><%= link_to 'Edit', edit_code_path(code) %></td>
        <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

